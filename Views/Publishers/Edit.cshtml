@model Timu_Vlad_Lab2.Models.Publishers

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Publishers</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;

                                List<Timu_Vlad_Lab2.Models.LibraryViewModels.PublishedBookData> books =
                                ViewBag.Books;
                                foreach (var book in books)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedBooks"
                                               value="@book.BookID"
                                               @(Html.Raw(book.IsPublished ? "checked=\"checked\"" : "")) />
                                        @book.BookID @: @book.Title
                                    @:</td>
                                }
                            @:</tr>
                            }
                        </table>
                    </div>
                </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
